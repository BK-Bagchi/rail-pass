<!-- Trains Table Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <h2 class="mb-4">Train Management</h2>
    <div class="mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addTrainModal">
            <i class="bi bi-train-front-fill me-2"></i> Add Train
        </button>
    </div>
    <% if (!trains || trains.length === 0) { %>
        <% if (trainFound) { %>
            <div class="alert alert-warning text-center"><%= trainFound %></div>
        <% } %>
    <% } else { %>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Train Number</th>
                    <th>Train Name</th>
                    <th>Starting Station</th>
                    <th>Ending Station</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Stations Between</th>
                    <th>Seats</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% trains.forEach((train, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= train.trainNumber %></td>
                        <td><%= train.trainName %></td>
                        <td><%= train.route.startingStation %></td>
                        <td><%= train.route.endingStation %></td>
                        <td><%= train.route.departureTime %></td>
                        <td><%= train.route.arrivalTime %></td>
                        <td>
                            <ul class="list-unstyled mb-0">
                              <% if (train.route && Array.isArray(train.route.betweenStations)) { %>
                                <% train.route.betweenStations.forEach(station => { %>
                                  <li>
                                    <strong><%= station?.stationName || "N/A" %></strong>
                                    (Arrival: <%= station?.arrivalTime || "N/A" %>, Departure: <%= station?.departureTime || "N/A" %>)
                                  </li>
                                <% }) %>
                              <% } else { %>
                                <li>No stations in between</li>
                              <% } %>
                            </ul>
                        </td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                <li><strong>AC Sleeper:</strong> <%= train.seats.AC_Sleeper %></li>
                                <li><strong>AC Chair:</strong> <%= train.seats.AC_Chair %></li>
                                <li><strong>AC Seat:</strong> <%= train.seats.AC_Seat %></li>
                                <li><strong>First Sleeper:</strong> <%= train.seats.First_Sleeper %></li>
                                <li><strong>First Chair:</strong> <%= train.seats.First_Chair %></li>
                                <li><strong>First Seat:</strong> <%= train.seats.First_Seat %></li>
                                <li><strong>General:</strong> <%= train.seats.General %></li>
                            </ul>
                        </td>
                        
                        <td class="text-center">
                            <!-- Edit Button -->
                            <button class="btn btn-sm btn-warning"  data-bs-toggle="modal"  data-bs-target="#editTrainModal" data-id="<%= train._id %>">
                                Edit
                            </button>



                            <!-- Delete Button -->
                            <a href="/admin/trains/deleteTrain/<%= train._id %>" 
                            class="btn btn-sm btn-danger" 
                            onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
    <% } %>
</main>

<!-- Add Train Modal -->
<div class="modal fade" id="addTrainModal" tabindex="-1" aria-labelledby="addTrainModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="addTrainForm" action="/admin/trains/addNewTrain" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="addTrainModalLabel">Add New Train</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <!-- Train Number & Name -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Train Number</label>
              <input type="text" class="form-control" name="trainNumber" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Train Name</label>
              <input type="text" class="form-control" name="trainName" required>
            </div>
          </div>

          <!-- Route: Starting & Ending -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Starting Station</label>
              <input type="text" class="form-control" name="startingStation" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Ending Station</label>
              <input type="text" class="form-control" name="endingStation" required>
            </div>
          </div>

          <!-- Departure & Arrival Time -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Departure Time</label>
              <input type="time" class="form-control" name="departureTime" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Arrival Time</label>
              <input type="time" class="form-control" name="arrivalTime" required>
            </div>
          </div>

          <!-- Between Stations (dynamic fields) -->
          <div class="mb-3">
            <label class="form-label fw-bold">Stations in Between</label>
            <div id="stationsContainer">
              <!-- Initial input group -->
              <div class="row g-2 mb-2 station-group">
                <div class="col-md-4">
                  <label class="form-label fw-bold">Station Name</label>
                  <input type="text" class="form-control" name="betweenStations[0][stationName]" placeholder="Station name" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label fw-bold">Arrival Time</label>
                  <input type="time" class="form-control" name="betweenStations[0][arrivalTime]" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label fw-bold">Departure Time</label>
                  <input type="time" class="form-control" name="betweenStations[0][departureTime]" required>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                  <button class="btn btn-danger remove-station-btn w-100" type="button">&times;</button>
                </div>
              </div>
            </div>
            <button type="button" class="btn btn-sm btn-primary" id="addStationBtn">Add Station</button>
          </div>

          <script>
            let stationIndex = 1; // Track index for naming inputs

            const stationsContainer = document.getElementById("stationsContainer");
            const addStationBtn = document.getElementById("addStationBtn");

            addStationBtn.addEventListener("click", () => {
              const row = document.createElement("div");
              row.classList.add("row", "g-2", "mb-2", "station-group");

              row.innerHTML = `
                <div class="col-md-4">
                  <label class="form-label fw-bold">Station Name</label>
                  <input type="text" class="form-control" name="betweenStations[${stationIndex}][stationName]" placeholder="Station name" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label fw-bold">Arrival Time</label>
                  <input type="time" class="form-control" name="betweenStations[${stationIndex}][arrivalTime]" required>
                </div>
                <div class="col-md-3">
                  <label class="form-label fw-bold">Departure Time</label>
                  <input type="time" class="form-control" name="betweenStations[${stationIndex}][departureTime]" required>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                  <button class="btn btn-danger remove-station-btn w-100" type="button">&times;</button>
                </div>
              `;

              stationsContainer.appendChild(row);
              stationIndex++;
            });

            // Remove station row
            document.addEventListener("click", function (e) {
              if (e.target && e.target.classList.contains("remove-station-btn")) {
                e.target.closest(".station-group").remove();
              }
            });
          </script>

          <!-- Between Stations (dynamic fields) -->


          <!-- Seats -->
          <h6 class="mb-2">Seats</h6>
          <div class="row mb-3">
            <% const seatTypesInput = ["AC_Sleeper","AC_Chair","AC_Seat","First_Sleeper","First_Chair","First_Seat","General"]; %>
            <% seatTypesInput.forEach(type => { %>
              <div class="col-md-4 mb-2">
                <label class="form-label"><%= type %></label>
                <input type="number" class="form-control seat-input" name="<%= type %>" min="0" value="0">
              </div>
            <% }) %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Train</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Train Modal -->
<div class="modal fade" id="editTrainModal" tabindex="-1" aria-labelledby="editTrainModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="editTrainForm" action="" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Edit Train</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id" id="editTrainId">

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Train Number</label>
              <input type="text" class="form-control" name="trainNumber" id="editTrainNumber" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Train Name</label>
              <input type="text" class="form-control" name="trainName" id="editTrainName" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Starting Station</label>
              <input type="text" class="form-control" name="startingStation" id="editStartingStation" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Ending Station</label>
              <input type="text" class="form-control" name="endingStation" id="editEndingStation" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Departure Time</label>
              <input type="time" class="form-control" name="departureTime" id="editDepartureTime" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Arrival Time</label>
              <input type="time" class="form-control" name="arrivalTime" id="editArrivalTime" required>
            </div>
          </div>

          <!-- Seats -->
          <h6 class="mb-2">Seats</h6>
          <div class="row mb-3">
            <% const seatTypesEdit = ["AC_Sleeper","AC_Chair","AC_Seat","First_Sleeper","First_Chair","First_Seat","General"]; %>
            <% seatTypesEdit.forEach(type => { %>
              <div class="col-md-4 mb-2">
                <label class="form-label"><%= type %></label>
                <input type="number" class="form-control seat-input" name="<%= type %>" id="editSeat<%= type %>" min="0">
              </div>
            <% }) %>
          </div>

          <!-- Between Stations -->
          <h6 class="mb-2">Stations In Between</h6>
          <div id="editStationsContainer"></div>
          <button type="button" class="btn btn-sm btn-primary mb-3" id="addEditStationBtn">Add Station</button>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const trains = <%- JSON.stringify(trains) %>; // Pass all trains from server
  let editStationIndex = 0;

  const editTrainModal = document.getElementById('editTrainModal');
  const editStationsContainer = document.getElementById('editStationsContainer');

  editTrainModal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const trainId = button.getAttribute('data-id');

      const train = trains.find(t => t._id === trainId);
      if (!train) return;

      document.getElementById('editTrainForm').action = `/admin/trains/editTrain/${train._id}`;
      document.getElementById('editTrainId').value = train._id;
      document.getElementById('editTrainNumber').value = train.trainNumber;
      document.getElementById('editTrainName').value = train.trainName;
      document.getElementById('editStartingStation').value = train.route.startingStation || '';
      document.getElementById('editEndingStation').value = train.route.endingStation || '';
      document.getElementById('editDepartureTime').value = train.route.departureTime || '';
      document.getElementById('editArrivalTime').value = train.route.arrivalTime || '';

      Object.keys(train.seats).forEach(type => {
          const seatInput = document.getElementById('editSeat' + type);
          if (seatInput) seatInput.value = train.seats[type];
      });

      // Populate Between Stations
      editStationsContainer.innerHTML = '';
      editStationIndex = 0;
      if (train.route.betweenStations && train.route.betweenStations.length > 0) {
          train.route.betweenStations.forEach(st => addEditStationRow(st));
      }
  });

  // Add Between Station Row
  function addEditStationRow(station = {}) {
      const row = document.createElement('div');
      row.classList.add('row', 'g-2', 'mb-2', 'station-group');

      row.innerHTML = `
          <div class="col-md-4">
              <label class="form-label">Station Name</label>
              <input type="text" class="form-control" name="betweenStations[${editStationIndex}][stationName]" value="${station.stationName || ''}" required>
          </div>
          <div class="col-md-3">
              <label class="form-label">Arrival Time</label>
              <input type="time" class="form-control" name="betweenStations[${editStationIndex}][arrivalTime]" value="${station.arrivalTime || ''}" required>
          </div>
          <div class="col-md-3">
              <label class="form-label">Departure Time</label>
              <input type="time" class="form-control" name="betweenStations[${editStationIndex}][departureTime]" value="${station.departureTime || ''}" required>
          </div>
          <div class="col-md-2 d-flex align-items-end">
              <button type="button" class="btn btn-danger w-100 remove-station-btn">&times;</button>
          </div>
      `;
      editStationsContainer.appendChild(row);
      editStationIndex++;
  }

  // Add new station
  document.getElementById('addEditStationBtn').addEventListener('click', () => addEditStationRow());

  // Remove station
  document.addEventListener('click', function(e) {
      if (e.target && e.target.classList.contains('remove-station-btn')) {
          e.target.closest('.station-group').remove();
      }
  });
</script>

