<!-- Trains Table Content -->
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
    <h2 class="mb-4">Train Management</h2>
    <div class="mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addTrainModal">
            <i class="bi bi-person-plus-fill me-2"></i> Add Train
        </button>
    </div>
    <% if (!trains || trains.length === 0) { %>
        <% if (trainFound) { %>
            <div class="alert alert-warning text-center"><%= trainFound %></div>
        <% } %>
    <% } else { %>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Train Number</th>
                    <th>Train Name</th>
                    <th>Starting Station</th>
                    <th>Ending Station</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Stations Between</th>
                    <th>Seats</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% trains.forEach((train, index) => { %>
                    <% const start = train.route[0]; %>
                    <% const end = train.route[train.route.length - 1]; %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= train.trainNumber %></td>
                        <td><%= train.trainName %></td>
                        <td><%= train.route[0].startingStation %></td>
                        <td><%= train.route[0].endingStation %></td>
                        <td><%= train.route[0].departureTime %></td>
                        <td><%= train.route[0].arrivalTime %></td>
                        <td><%= train.route[0].betweenStations %></td>
                        <td>
                            <ul class="list-unstyled mb-0">
                                <li>AC_Sleeper: <%= train.seats.AC_Sleeper %></li>
                                <li>AC_Chair: <%= train.seats.AC_Chair %></li>
                                <li>AC_Seat: <%= train.seats.AC_Seat %></li>
                                <li>First_Sleeper: <%= train.seats.First_Sleeper %></li>
                                <li>First_Chair: <%= train.seats.First_Chair %></li>
                                <li>First_Seat: <%= train.seats.First_Seat %></li>
                                <li>General: <%= train.seats.General %></li>
                            </ul>
                        </td>
                        
                        <td class="text-center">
                            <!-- Edit Button -->
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal"  ata-bs-target="#editTrainModal" onclick='openEditTrainModal(
                                    "<%= train._id %>", 
                                    "<%= train.trainNumber %>", 
                                    "<%= train.trainName %>", 
                                    JSON.parse(`<%- JSON.stringify(train.route) %>`), 
                                    JSON.parse(`<%- JSON.stringify(train.seats) %>`)
                                )'>
                                Edit
                            </button>


                            <!-- Delete Button -->
                            <a href="/admin/trains/delete/<%= train._id %>" 
                            class="btn btn-sm btn-danger" 
                            onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
    <% } %>
</main>

<!-- Edit Train Modal -->
<div class="modal fade" id="editTrainModal" tabindex="-1" aria-labelledby="editTrainModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="editTrainForm" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="editTrainModalLabel">Edit Train</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        
        <div class="modal-body">
          <input type="hidden" name="id" id="editTrainId">
          
          <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" id="editFirstName" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="editLastName" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="editEmail" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" name="phone" id="editPhone" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Date of Birth</label>
            <input type="date" class="form-control" name="dateOfBirth" id="editDOB" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Role</label>
            <select class="form-control" name="role" id="editRole">
              <option value="user">User</option>
              <option value="admin">Admin</option>
            </select>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Add Train Modal -->
<div class="modal fade" id="addTrainModal" tabindex="-1" aria-labelledby="addTrainModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form id="addTrainForm" action="/admin/trains/addNewTrain" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="addTrainModalLabel">Add New Train</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <!-- Train Number & Name -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Train Number</label>
              <input type="text" class="form-control" name="trainNumber" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Train Name</label>
              <input type="text" class="form-control" name="trainName" required>
            </div>
          </div>

          <!-- Route: Starting & Ending -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Starting Station</label>
              <input type="text" class="form-control" name="startingStation" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Ending Station</label>
              <input type="text" class="form-control" name="endingStation" required>
            </div>
          </div>

          <!-- Departure & Arrival Time -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Departure Time</label>
              <input type="time" class="form-control" name="departureTime" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Arrival Time</label>
              <input type="time" class="form-control" name="arrivalTime" required>
            </div>
          </div>

          <!-- Between Stations (dynamic fields) -->
            <div class="mb-3">
                <label class="form-label">Stations in Between</label>
                <div id="stationsContainer">
                    <!-- Initial input field -->
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" name="betweenStations" placeholder="Enter station name">
                        <button class="btn btn-danger remove-station-btn" type="button">&times;</button>
                    </div>
                </div>
                <button type="button" class="btn btn-sm btn-primary" id="addStationBtn">Add Station</button>
            </div>

            <script>
                const stationsContainer = document.getElementById('stationsContainer');
                const addStationBtn = document.getElementById('addStationBtn');

                addStationBtn.addEventListener('click', () => {
                    // Create new input group
                    const div = document.createElement('div');
                    div.classList.add('input-group', 'mb-2');
                    div.innerHTML = `
                        <input type="text" class="form-control" name="betweenStations" placeholder="Enter station name">
                        <button class="btn btn-danger remove-station-btn" type="button">&times;</button>
                    `;
                    stationsContainer.appendChild(div);

                    // Add event listener to remove button
                    div.querySelector('.remove-station-btn').addEventListener('click', () => {
                        div.remove();
                    });
                });

                // Remove initial input if remove button clicked
                document.querySelectorAll('.remove-station-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        e.target.parentElement.remove();
                    });
                });
            </script>
          <!-- Between Stations (dynamic fields) -->


          <!-- Seats -->
          <h6 class="mb-2">Seats</h6>
          <div class="row mb-3">
            <div class="col-md-4 mb-2">
              <label class="form-label">AC Sleeper</label>
              <input type="number" class="form-control" name="AC_Sleeper" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">AC Chair</label>
              <input type="number" class="form-control" name="AC_Chair" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">AC Seat (Cabin)</label>
              <input type="number" class="form-control" name="AC_Seat" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">First Sleeper</label>
              <input type="number" class="form-control" name="First_Sleeper" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">First Chair</label>
              <input type="number" class="form-control" name="First_Chair" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">First Seat (Cabin)</label>
              <input type="number" class="form-control" name="First_Seat" min="0" value="0">
            </div>
            <div class="col-md-4 mb-2">
              <label class="form-label">General</label>
              <input type="number" class="form-control" name="General" min="0" value="0">
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add Train</button>
        </div>
      </form>
    </div>
  </div>
</div>


