<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="../js/bootstrap.bundle.min.js"></script>
    <style>
    .hover-shadow {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    </style>
</head>
<body>
    <%- include("../partials/navbar.ejs") %>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse vh-100 p-0">
                <div class="position-sticky">
                    <h4 class="text-light p-3 border-bottom">Admin Panel</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/admin/dashboard">
                                <i class="bi bi-speedometer2 fs-5 me-2"></i> Admin Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/admin/users">
                                <i class="bi bi-people fs-5 me-2"></i> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/admin/trains">
                                <i class="bi bi-train-front fs-5 me-2"></i> Trains
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/admin/stations">
                                <i class="bi bi-signpost-2 fs-5 me-2"></i> Stations
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="btn btn-danger w-100" href="/auth/logout">
                                <i class="bi bi-box-arrow-right fs-5 me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </aside>
            <script>
                console.log("management:", "<%= management %>");
            </script>


            <!-- Main Content -->
            <% if (management === "admin") { %>
                <%- include("admin.ejs", { management }) %>
            <% } else if (management === "users") { %>
                <%- include("users.ejs", { management }) %>
            <% } else if (management === "trains") { %>
                <%- include("trains.ejs", {
                    management: management ,
                    trains: trains,
                    trainFound: trainFound
                }) %>
            <% } else if (management === "stations"){%>
                <%- include("stations.ejs", { management }) %>
            <% }%>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>
</body>

</html>