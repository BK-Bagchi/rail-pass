<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Train</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="../js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container mt-5">
        <h2>Select Your Train</h2>
        <form action="/booking/selectTrain" method="POST">
            <div class="mb-3">
                <label for="train" class="form-label">Choose a Train</label>
                <select name="train" id="train" class="form-select">
                    <% trains.forEach(train => { %>
                        <option value="<%= train._id %>"><%= train.trainName %> - <%= train.trainNumber %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Select Train</button>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>