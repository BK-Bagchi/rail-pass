<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Seat</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="../../js/bootstrap.bundle.min.js"></script>
    <style>
        .coach-container{
            max-width: 530px;
            margin: 0 auto;
        }
        .seat-btn {
            padding: 0px;
            width: 40px !important;
            height: 40px !important;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container py-4">
        <h3 class="mb-4">Selecting Train <%= trainId %> for seat type <%= seatType %></h3>
        <!-- Coach Tabs -->
        <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
            <% ["A", "B", "C", "D"].forEach((coach, index) => { %>
                <button 
                    class="btn btn-lg <%= index === 0 ? 'btn-primary' : 'btn-outline-primary' %> coach-btn"
                    data-coach="<%= coach %>">
                    Coach <%= coach %>
                </button>
            <% }) %>
        </div>
        <!-- Legend / Seat Status Indicator -->
        <div class="d-flex justify-content-center mb-4 gap-4">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-success me-2 seat-btn" style="width:30px; height:30px;" disabled>BK</button>
                <span>Ready to Book</span>
            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-success me-2 seat-btn" style="width:30px; height:30px;" disabled>BK</button>
                <span>You're Booking</span>
            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-danger me-2 seat-btn" style="width:30px; height:30px;" disabled>BK</button>
                <span>Already Booked</span>
            </div>
        </div>
        <!-- Coaches -->
        <% ["A", "B", "C", "D"].forEach((coach, index) => { %>
            <div class="coach-container <%= index === 0 ? '' : 'd-none' %>" id="coach-<%= coach %>">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-primary text-white fw-bold">
                        Coach <%= coach %>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center gap-2">
                            <% for (let row = 0; row < 18; row++) { %>
                                <div class="d-flex align-items-center gap-2">
                                    <!-- Left 2 seats -->
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 1) %>">
                                        <%= coach + (row*5 + 1) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 2) %>">
                                        <%= coach + (row*5 + 2) %>
                                    </button>
                                    <!-- Aisle space -->
                                    <div style="width:50px;"></div>
                                    <!-- Right 3 seats -->
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 3) %>">
                                        <%= coach + (row*5 + 3) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 4) %>">
                                        <%= coach + (row*5 + 4) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 5) %>">
                                        <%= coach + (row*5 + 5) %>
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
        <div class="text-center mb-5">
            <button id="confirmSelection" class="btn btn-lg btn-success px-4">
                Confirm Selection
            </button>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>

    <script>
        // Switch coaches
        const coachButtons = document.querySelectorAll(".coach-btn");
        const coachContainers = document.querySelectorAll(".coach-container");
        coachButtons.forEach(btn => {
            btn.addEventListener("click", () => {
                const selected = btn.dataset.coach;
                // Toggle button styles
                coachButtons.forEach(b => b.classList.remove("btn-primary"));
                coachButtons.forEach(b => b.classList.add("btn-outline-primary"));
                btn.classList.remove("btn-outline-primary");
                btn.classList.add("btn-primary");
                // Show only selected coach
                coachContainers.forEach(c => c.classList.add("d-none"));
                document.getElementById("coach-" + selected).classList.remove("d-none");
            });
        });
        // Seat selection
        document.querySelectorAll(".seat-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                btn.classList.toggle("btn-outline-success");
                btn.classList.toggle("btn-success");
            });
        });
        // Confirm selection
        // Keep track of selected seats
        const selectedSeats = new Set();
        // Toggle seat selection on click
        document.querySelectorAll(".seat-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                const seat = btn.getAttribute("data-seat");
                if (selectedSeats.has(seat)) {
                    selectedSeats.delete(seat);
                    btn.classList.remove("btn-success");
                    btn.classList.add("btn-outline-success");
                } else {
                    selectedSeats.add(seat);
                    btn.classList.remove("btn-outline-success");
                    btn.classList.add("btn-success");
                }
            });
        });
        // Confirm button click
        document.getElementById("confirmSelection").addEventListener("click", () => {
            console.log("Total Selected Seats:", selectedSeats.size);
            console.log("Selected Seats:", Array.from(selectedSeats));
        });
    </script>
</body>
</html>