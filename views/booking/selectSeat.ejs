<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Seat</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <script src="../../js/bootstrap.bundle.min.js"></script>
    <style>
        .coach-container{
            max-width: 530px;
            margin: 0 auto;
        }
        .seat-btn {
            padding: 0px;
            width: 40px !important;
            height: 40px !important;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container py-4">
        <div class="bg-light rounded-4 shadow-sm p-4 mb-5 border-5 border-primary">
            <h4 class="fw-bold mb-3 text-center text-primary">
                <i class="bi bi-train-front-fill me-2"></i>
                <%= trainName %>
            </h4>
            <div class="d-flex flex-wrap justify-content-center gap-3 text-center">
                <!-- Seat Type -->
                <div class="p-3 rounded-3 shadow-sm bg-white" style="min-width: 120px;">
                    <i class="bi bi-person-fill fs-4 text-primary"></i>
                    <div class="fw-semibold mt-1"><%= seatClass.replace("_", " ") %></div>
                    <small class="text-muted">Seat Type</small>
                </div>
                <!-- From Station -->
                <div class="p-3 rounded-3 shadow-sm bg-white" style="min-width: 120px;">
                    <i class="bi bi-geo-alt-fill fs-4 text-success"></i>
                    <div class="fw-semibold mt-1"><%= fromStation %></div>
                    <small class="text-muted">From</small>
                </div>
                <!-- To Station -->
                <div class="p-3 rounded-3 shadow-sm bg-white" style="min-width: 120px;">
                    <i class="bi bi-geo-fill fs-4 text-danger"></i>
                    <div class="fw-semibold mt-1"><%= toStation %></div>
                    <small class="text-muted">To</small>
                </div>
                <!-- Journey Date -->
                <div class="p-3 rounded-3 shadow-sm bg-white" style="min-width: 160px;">
                    <i class="bi bi-calendar-event fs-4 text-warning"></i>
                    <div class="fw-semibold mt-1">
                        <%= new Date(journeyDate).toLocaleDateString('en-US', {
                                weekday: 'long',
                                day: 'numeric',
                                month: 'long',
                                year: 'numeric'
                            }) %>
                    </div>
                    <small class="text-muted">Journey Date</small>
                </div>
            </div>
        </div>
        <!-- Coach Tabs -->
        <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
            <% ["A", "B", "C", "D"].forEach((coach, index) => { %>
                <button 
                    class="btn btn-lg <%= index === 0 ? 'btn-primary' : 'btn-outline-primary' %> coach-btn"
                    data-coach="<%= coach %>">
                    Coach <%= coach %>
                </button>
            <% }) %>
        </div>
        <!-- Legend / Seat Status Indicator -->
        <div class="d-flex justify-content-center mb-4 gap-4">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-success me-2 seat-btn" style="width:30px; height:30px;" disabled>RP</button>
                <span>Ready to Book</span>
            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-success me-2 seat-btn" style="width:30px; height:30px;" disabled>RP</button>
                <span>You're Booking</span>
            </div>
            <div class="d-flex align-items-center">
                <button class="btn btn-danger me-2 seat-btn" style="width:30px; height:30px;" disabled>RP</button>
                <span>Already Booked</span>
            </div>
        </div>
        <!-- Coaches -->
        <% ["A", "B", "C", "D"].forEach((coach, index) => { %>
            <div class="coach-container <%= index === 0 ? '' : 'd-none' %>" id="coach-<%= coach %>">
                <div class="card mb-4 shadow-sm border-0">
                    <div class="card-header bg-primary text-white fw-bold">
                        Coach <%= coach %>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center gap-2">
                            <% for (let row = 0; row < 18; row++) { %>
                                <div class="d-flex align-items-center gap-2">
                                    <!-- Left 2 seats -->
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 1) %>">
                                        <%= coach + (row*5 + 1) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 2) %>">
                                        <%= coach + (row*5 + 2) %>
                                    </button>
                                    <!-- Aisle space -->
                                    <div style="width:50px;"></div>
                                    <!-- Right 3 seats -->
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 3) %>">
                                        <%= coach + (row*5 + 3) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 4) %>">
                                        <%= coach + (row*5 + 4) %>
                                    </button>
                                    <button type="button" class="btn btn-outline-success seat-btn" 
                                        data-seat="<%= coach + (row*5 + 5) %>">
                                        <%= coach + (row*5 + 5) %>
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
        <div class="text-center mb-5">
            <form id="confirmBookingForm" action="/booking/confirmBooking" method="POST">
                <input type="hidden" name="trainId" value="<%= trainId %>">
                <input type="hidden" name="trainName" value="<%= trainName %>">
                <input type="hidden" name="seatClass" value="<%= seatClass %>">
                <input type="hidden" name="fromStation" value="<%= fromStation %>">
                <input type="hidden" name="toStation" value="<%= toStation %>">
                <input type="hidden" name="journeyDate" value="<%= journeyDate %>">
                <input type="hidden" name="totalSeats" id="totalSeats">
                <input type="hidden" name="selectedSeats" id="selectedSeats">
                <button type="submit" id="confirmBooking" class="btn btn-lg btn-success px-4">
                    Confirm Booking
                </button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>

    <script>
        // Switch coaches
        const coachButtons = document.querySelectorAll(".coach-btn");
        const coachContainers = document.querySelectorAll(".coach-container");
        coachButtons.forEach(btn => {
            btn.addEventListener("click", () => {
                const selected = btn.dataset.coach;
                // Toggle button styles
                coachButtons.forEach(b => b.classList.remove("btn-primary"));
                coachButtons.forEach(b => b.classList.add("btn-outline-primary"));
                btn.classList.remove("btn-outline-primary");
                btn.classList.add("btn-primary");
                // Show only selected coach
                coachContainers.forEach(c => c.classList.add("d-none"));
                document.getElementById("coach-" + selected).classList.remove("d-none");
            });
        });
        // Seat selection
        document.querySelectorAll(".seat-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                btn.classList.toggle("btn-outline-success");
                btn.classList.toggle("btn-success");
            });
        });
        // Confirm selection
        // Keep track of selected seats
        const selectedSeats = new Set();
        // Toggle seat selection on click
        document.querySelectorAll(".seat-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                const seat = btn.getAttribute("data-seat");
                if (selectedSeats.has(seat)) {
                    selectedSeats.delete(seat);
                    btn.classList.remove("btn-success");
                    btn.classList.add("btn-outline-success");
                } else {
                    selectedSeats.add(seat);
                    btn.classList.remove("btn-outline-success");
                    btn.classList.add("btn-success");
                }
            });
        });
        
        // Confirm button click
        document.getElementById("confirmBooking").addEventListener("click", (e) => {
            e.preventDefault(); // prevent default form submission

            const form = document.getElementById("confirmBookingForm");

            // Check if no seats are selected
            if (selectedSeats.size === 0) {
            alert("⚠️ Please select at least one seat before confirming.");
            return; // stop further execution
            }

            // Set totalSeats
            document.getElementById("totalSeats").value = selectedSeats.size;

            // Remove old hidden inputs for selectedSeats
            const oldInputs = form.querySelectorAll('input[name="selectedSeats"]');
            oldInputs.forEach(input => input.remove());

            // Add selected seats as hidden inputs
            Array.from(selectedSeats).forEach(seat => {
            const input = document.createElement("input");
            input.type = "hidden";
            input.name = "selectedSeats";
            input.value = seat;
            form.appendChild(input);
            });

            // Submit the form
            form.submit();
        });
    </script>
</body>
</html>